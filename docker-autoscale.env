# Service configuration
SERVICE_NAME=app-back              # Name of the service to monitor
CONTAINER_PREFIX=app-back         # Prefix for container names (usually same as SERVICE_NAME)

# Auto-scaling configuration
MIN_INSTANCES=2                # Minimum number of instances to maintain
MAX_INSTANCES=3                # Maximum number of instances allowed
CHECK_INTERVAL=300              # Time in seconds between checks
CPU_HIGH_THRESHOLD=80          # CPU threshold to scale up (%)
MEM_HIGH_THRESHOLD=90          # Memory threshold to scale up (%)
CPU_LOW_THRESHOLD=30           # CPU threshold to scale down (%)
MEM_LOW_THRESHOLD=40           # Memory threshold to scale down (%)
